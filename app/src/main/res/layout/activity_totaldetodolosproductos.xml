<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_25">


    <TextView
        android:id="@+id/txtPrecioTotalProducto1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Precio Total Producto 1: $0.0"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>


    <TextView
        android:id="@+id/txtPrecioTotalProducto2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Precio Total Producto 2: $0.0"
        android:layout_below="@id/txtPrecioTotalProducto1"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>


    <TextView
        android:id="@+id/txtPrecioTotalProducto3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Precio Total Producto 3: $0.0"
        android:layout_below="@id/txtPrecioTotalProducto2"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>


    <TextView
        android:id="@+id/txtPrecioTotalTodosLosProductos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Precio Total de Todos los Productos: $0.0"
        android:layout_below="@id/txtPrecioTotalProducto3"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"/>




    <Button
        android:id="@+id/btnRegresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPrecioTotalTodosLosProductos"
        android:layout_marginStart="16dp"
        android:layout_marginTop="23dp"
        android:text="Regresar" />

    <Button
        android:id="@+id/btntotal3cosas"
        android:layout_width="93dp"
        android:layout_height="35dp"
        android:layout_below="@+id/btnRegresar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="-58dp"
        android:layout_marginEnd="168dp"
        android:layout_marginBottom="532dp"
        android:text="VER TOTAL" />

</RelativeLayout>


