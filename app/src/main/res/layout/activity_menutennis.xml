<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_16">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ActivityTennis">


        <LinearLayout
            android:id="@+id/linearLayoutImages"
            android:layout_width="345dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/img_2" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnAgregarCompra1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="agregarCompra"
                    android:tag="400"
                    android:text="Agregar Compra $400" />


                <Button
                    android:id="@+id/btnVerDescripcion1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="verDescripcion"
                    android:text="Ver Descripción" />
            </LinearLayout>


            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp" />


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/img_1" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnAgregarCompra2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="agregarCompra"
                    android:tag="500"
                    android:text="Agregar Compra $500" />


                <Button
                    android:id="@+id/btnVerDescripcion2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="verDescripcion"
                    android:text="Ver Descripción" />
            </LinearLayout>


            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp" />


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/img" />


            <Button
                android:id="@+id/btnAgregarCompra3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="agregarCompra"
                android:tag="600"
                android:text="Agregar Compra $600" />

            <Button
                android:id="@+id/btnVerDescripcion3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="verDescripcion"
                android:text="Ver Descripción" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>

            <Button
                android:id="@+id/btnAgregarCompra"
                android:layout_width="236dp"
                android:layout_height="wrap_content"
                android:text="PAGAR SOLO TENNIS" />

        </LinearLayout>


        <TextView
            android:id="@+id/txtPrecioTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="Precio total: $0"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>
</ScrollView>
